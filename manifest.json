{
	"manifest_version": 2,

	"name": "rikaigu (devel)",
	"version": "1.0.1",

	"browser_specific_settings": {
		"gecko": {
			"id": "rikaigu@versusvoid"
		}
	},

	"description": "Rikaikun enhanced. Translate Japanese by hovering over words.",
	"icons": {
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},

	"permissions": [
		"tabs",
		"storage"
	],

	"background": {
		"page": "html/background.html",
		"persistent": true
	},

	"browser_action": {
		"default_icon": "images/ba.png"
	},

	"options_ui": {
		"page": "html/options.html",
		"chrome_style": true
	},

	"content_scripts": [{
		"matches": ["<all_urls>"],
		"match_about_blank": true,
		"js": ["js/selection.js", "js/highlight.js", "js/rikaicontent.js"],
		"all_frames": true
	}],

	"content_security_policy": "script-src 'self' 'wasm-eval'; object-src 'self'",

	"web_accessible_resources": [
		"css/popup-black.css",
		"css/popup-blue.css",
		"css/popup-lightblue.css",
		"css/popup-yellow.css",
		"css/popup-common.css",
		"html/scratchpad.html",
		"html/upload.html",
		"js/scratchpad.js"
	]

}
